<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:theme="@style/Theme.AppCompat"
                                                   tools:context=".fragments.DefaultClockFragment"
                                                   android:background="#004203">


    <com.example.customviewclock.views.ClockCustomView
            android:layout_height="410dp"
            android:layout_width="190dp"
            app:layout_constraintTop_toTopOf="parent"
            app:backgroundColor="@color/dark_green"
            app:borderColor="@color/black"
            app:hourArrowColor="@color/black"
            app:minuteArrowColor="@color/black"
            app:secondArrowColor="@color/red"
            app:nailColor="@color/gold"
            app:centerCircleColor="@color/black"
            app:romanNumbers="true"
            app:numberRadiusCoef="0.7"
            app:numberFont="@font/morice_bejar"
            style="@style/CustomClock.Dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/clockCustomView"
            app:layout_constraintHorizontal_bias="0.626" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/next"
            android:layout_width="48dp"
            android:layout_height="match_parent" android:id="@+id/next_button"

            app:layout_constraintStart_toEndOf="@+id/clockCustomView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.551" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="@string/roman"
            android:textColor="@color/gold"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.498" android:layout_marginStart="72dp"
            app:layout_constraintEnd_toStartOf="@+id/clockCustomView" app:layout_constraintHorizontal_bias="0.317"/>

</androidx.constraintlayout.widget.ConstraintLayout>